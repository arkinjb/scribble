<!DOCTYPE html>
<html>
<head>
  <title>Scribblr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1><%= link_to "Scribblr", posts_path %></h1>
    <nav>

      <%= link_to "Home", posts_path, class: "nav_link" %>
      <%= link_to "New Post", new_post_path, class: "nav_link" %>
      <% if session[:is_signed_in] %>
        <%= link_to "Your Profile", user_path(session[:user]["id"]), class: "nav_link" %>
      <% end %>
      <% if session[:is_signed_in] %>
        <%= link_to "Sign Out: #{session[:user]["username"]}", signout_path, class: "nav_link" %>
      <% else %>
        <%= link_to "Sign In", signin_path, class: "nav_link" %>
      <% end %>
    </nav>
  </header>

<%= yield %>

</body>
</html>
