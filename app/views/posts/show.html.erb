<div class="post_container">
  <div class="post_header">
    <h2><%= @post.title %></h2>
    <p class="byline">Posted by <%= @post.user.username %> <span><%= time_ago_in_words(@post.created_at) %></span> ago - <%= link_to "Edit Post", edit_post_path %></p>
  </div>

  <div class="post_body">
    <%= @post.body %>
  </div>
</div>

<div class="comment_container">
  <ul>
    <% @comments.each do |comment| %>

        <li>
          <%= comment.body %> by <%= link_to comment.user.username, user_path(comment.user.id) %>
          <%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %>
        </li>

    <% end %>

    <%= form_for [@post, Comment.new] do |f| %>
      <%= f.label :body, "Add a New Comment" %>
      <%= f.text_area :body %>

      <%= f.submit %>
    <% end %>

  </ul>
</div> <!-- end of comment container div -->

